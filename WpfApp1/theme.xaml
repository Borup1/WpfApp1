<Window x:Class="WpfApp1.theme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="theme" Height="450" Width="800">


    <Grid Background="{DynamicResource Background}">
        <StackPanel>
            <ComboBox Name="LanguageCombobox" Width="100" SelectedItem="{Binding Language}" />
            <ComboBox Name="ThemesCombobox" Width="100" SelectedItem="{Binding Theme}" SelectionChanged="ThemesCombobox_SelectionChanged"/>
            <TextBox Width="100"/>
            <TextBox Width="100"/>
            <Button Content="Save" Click="Save" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
